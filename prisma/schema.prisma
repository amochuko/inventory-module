generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "postgresql"
  // url      = env("DATABASE_URL")
  provider = "sqlite"
  url      = env("SQLITE_PATH")
}

// Describe the structure of the `Link` table
model Feed {
  id          Int       @id @default(autoincrement())
  description String
  url         String
  comments    Comment[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?
}

model Comment {
  id        Int       @id @default(autoincrement())
  body      String
  feedID    Int
  feed      Feed      @relation(fields: [feedID], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime?
}
