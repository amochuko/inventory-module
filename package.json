{
  "name": "inventory",
  "version": "1.0.0",
  "description": "A suit of inventory modules for small businesses",
  "main": "src/main.ts",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run clean && tsc",
    "start": "npm run build && node ./dist/main.js",
    "dev": "NODE_ENV=development nodemon",
    "test": "jest",
    "test:coverage": "jest --forceExit --coverage --verbose",
    "gql:codegen": "graphql-codegen",
    "prestart:q": "npm run gql:codegen",
    "predev:q": "npm run gql:codegen",
    "profiler": "NODE_ENV=production node --prof dist/main.js",
    "lint": "npx eslint .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "migrate:db": "NODE_ENV=development ts-node src/scripts/run-migrations.ts"
  },
  "author": "Ochuko Awhe <7204868+amochuko@users.noreply.github.com>",
  "license": "MIT",
  "dependencies": {
    "@envelop/graphql-modules": "^6.0.0",
    "@escape.tech/graphql-armor": "^3.1.2",
    "@graphql-yoga/plugin-csrf-prevention": "^3.10.11",
    "@graphql-yoga/plugin-defer-stream": "^3.13.3",
    "@graphql-yoga/plugin-jwt": "^3.4.13",
    "@graphql-yoga/plugin-prometheus": "^6.10.2",
    "@graphql-yoga/plugin-response-cache": "^3.17.2",
    "@parcel/watcher": "^2.5.1",
    "@whatwg-node/server-plugin-cookies": "^1.0.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "graphql": "^16.10.0",
    "graphql-modules": "^2.4.0",
    "graphql-subscriptions": "^3.0.0",
    "graphql-yoga": "^5.10.10",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.12.0",
    "morgan": "^1.10.0",
    "pg": "^8.13.1",
    "prom-client": "^15.1.3",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.3",
    "@graphql-codegen/graphql-modules-preset": "^4.0.13",
    "@graphql-codegen/typescript": "^4.1.3",
    "@graphql-codegen/typescript-resolvers": "^4.4.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.11.11",
    "eslint": "^9.19.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0"
  }
}
